<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:padding="16dp"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="24dp">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/ic_profile_placeholder"
            android:layout_marginBottom="8dp"/>

        <!-- Name -->
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alex Johnson"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/black"/>

        <!-- Email -->
        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alex.johnson@example.com"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <!-- Phone -->
        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1-234-567-8901"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <!-- Sections -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Summary -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bg_blue"
                android:padding="12dp"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/summaryTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hi, this is Mahad and I am an AI enthusiast. Welcome to my profile."
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>

            <!-- Education -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bg_gray"
                android:padding="12dp"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Education"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/educationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FAST NUCES"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>

            <!-- Experience -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bg_blue"
                android:padding="12dp"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work Experience"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/experienceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tech Solutions Inc.\nJan 2018 - Present"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>

            <!-- References -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bg_gray"
                android:padding="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="References"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/referencesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Available upon request"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
